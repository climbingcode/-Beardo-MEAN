<section id="session-wrapper">

	<div class="error" ng-class="{'active': logInError }">Sorry, Login Failed</div>
	
	<h1>Sign In</h1>
	<form class="sign-in form-group" ng-submit="signIn(signInForm)">
		<input class="form-control" placeholder="username" type="text" ng-model="signInForm.username"></input>
		<input class="form-control" placeholder="password" type="password" ng-model="signInForm.password"></input>
		<button class="btn btn-default">Sign In</button>
	</form>

	<h1>Sign Up</h1>
	<form class="sign-up" ng-submit="signUp(signUpForm)">
		<input class="form-control" placeholder="username" type="text" ng-model="signUpForm.username"></input>
		<input class="form-control" placeholder="email" type="text" ng-model="signUpForm.email"></input>
		<input class="form-control" placeholder="password" type="password" ng-model="signUpForm.password"></input>
		<button class="btn btn-default">Sign Up!</button>
	</form>

</section>