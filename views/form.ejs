<section class="form-wrapper" ng-controller="formCtrl">
	
	<form class="form-group" ng-submit="submitForm(form)">	
		<input 	class="form-control beard-name" type="input" ng-model="form.beardname" placeholder="add a cool name!">
		</input>

		<!-- uploader -->
		<div class="fileinput-container fileinput fileinput-new" data-provides="fileinput">
	  	<div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 400px; max-height: 400px;"></div>
	  	<div class="">
	    	<span class="btn btn-default btn-file">
	    		<span class="fileinput-new">Select image</span>
	    		<span class="fileinput-exists">Change</span>
	    		<input 	type="file" name="file" file-model="photo"/></input>
				</span>
	    	<a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
	  	</div>
		</div>

		<div class="beard-type-container">
			<div class="drop-box" ng-drop-box><div></div></div>
			<div ng-repeat="option in beardtypes">
				<span>
					<h2>{{ option.name }}</h2>
					<img ng-image-drag ng-src="{{option.image}}"/>
				</span>
			</div>
		</div>

		<button class="btn btn-default" type="submit">Submit</button>
	</form>
</section>